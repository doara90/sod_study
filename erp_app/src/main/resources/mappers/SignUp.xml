<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="signUp">

	<select id="IdCheck" parameterType="String" resultType="integer" >
		SELECT COUNT(*) FROM MEMBER WHERE ID = #{userId}
    </select>  

    <select id="RegisterMember" parameterType="com.erp.app.dto.MemberDTO" resultType="com.erp.app.dto.MemberDTO" >
    
	    INSERT INTO MEMBER
           (NO
           ,NAME
           ,ID
           ,PASSWORD
           ,GENDER
           ,EMAIL
           ,PHONE
           ,BIRTH
           ,JOIN_DATE
           ,LEV
           ,LAST_LOGIN
           ,APPROVAL
           ,ADDRESS1
           ,ADDRESS2
           ,ZIPCODE)
     VALUES
           (SELECT format(getdate(),'yyyyMMddHHmmssffff'),
           ,#{Name}
           ,#{Id}
           ,#{Password}
           ,#{Gender}
           ,#{Email}
           ,#{Phone}
           ,#{Birth}
           ,GETDATE()
           ,1
           ,GETDATE()
           ,"T"
           ,#{Address1}
           ,#{Address2}
           ,#{Zipcode}
           )
 
    </select>  
</mapper>